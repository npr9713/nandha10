<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <TextView
        android:id="@+id/textcmo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CMRL CMO's Login"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="32dp" />

    <EditText
        android:id="@+id/passwordl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="225dp"
        android:layout_marginStart="45dp"
        android:background="@drawable/et_custom"
        android:ems="10"
        android:hint="Password:"
        android:textColorHint="@color/black"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textSize="25dp" />

    <Button
        android:id="@+id/loginb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:backgroundTint="@color/blue"
        android:layout_marginVertical="425dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/resetpass"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginVertical="325dp"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@+id/textView5"
        android:backgroundTint="@color/blue"
        android:minHeight="48dp"
        android:text="Reset Password"
        android:textSize="10dp"
        tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />



    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:hint="Forgot Password:"
        android:textColorHint="@color/black"
        android:layout_marginVertical="325dp"

        android:textSize="25dp"/>




    <EditText
        android:id="@+id/eidl"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Employee id:"
        android:textColorHint="@color/black"
        android:layout_marginStart="45dp"
        android:layout_marginVertical="125dp"
        android:background="@drawable/et_custom"
        android:textSize="25dp"/>



</RelativeLayout>