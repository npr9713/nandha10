<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_gradient"
    >
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accepted Request Details:"
        android:textSize="30dp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/faultnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fault Ack Number: "
        android:layout_marginTop="70dp"
        android:textSize="20dp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/faultdateandtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginStart="20dp"
        android:textSize="20dp"
        android:text="Date and Time: "
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/faultstation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textSize="20dp"
        android:text="Station:"
        android:layout_marginTop="170dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/faultdevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device: "
        android:layout_marginStart="20dp"
        android:textSize="20dp"
        android:layout_marginTop="220dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/faultdeviceNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:textSize="20dp"
        android:layout_marginStart="20dp"
        android:text="Device Number: "
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/faultstatus"
        android:layout_width="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_marginStart="20dp"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:text="Fault Status: "
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/acceptedackno"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="73dp"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@+id/faultnumber"
        android:text=""
        android:textSize="20dp" />

    <TextView
        android:id="@+id/accepteddateandtime"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="120dp"
        android:layout_toRightOf="@+id/faultdateandtime"
        android:text=""
        android:textSize="20dp" />

    <TextView
        android:id="@+id/acceptedstation"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="170dp"
        android:layout_toRightOf="@+id/faultstation"
        android:text=""
        android:textSize="20dp" />

    <TextView
        android:id="@+id/accepteddevice"
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="220dp"
        android:layout_toRightOf="@+id/faultdevice"
        android:text=""
        android:textSize="20dp" />

    <TextView
        android:id="@+id/accepteddeviceno"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="270dp"
        android:layout_toRightOf="@+id/faultdeviceNumber"
        android:text=""
        android:textSize="20dp" />

    <TextView
        android:id="@+id/acceptedstatus"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="320dp"
        android:layout_toRightOf="@+id/faultstatus"
        android:text=""
        android:textSize="20dp" />
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/blue"
        android:elevation="8dp">

        <ImageButton
            android:id="@+id/logsbut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/logslogo1"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/homebut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/homelogo1"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/profilebut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/profilelogo1"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <Button
        android:id="@+id/closeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:layout_marginStart="20dp"
        android:layout_marginTop="370dp"
        android:layout_centerHorizontal="true"
        android:text="Close"/>


    <Button
        android:id="@+id/sparereqb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:layout_marginStart="20dp"
        android:layout_marginTop="420dp"
        android:layout_centerHorizontal="true"
        android:text="Spare Request"/>
    <Button
        android:id="@+id/need"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:layout_marginStart="20dp"
        android:layout_marginTop="470dp"
        android:layout_centerHorizontal="true"
        android:text="Need Support"/>


    <Button
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="470dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/blue"
        android:text="In progress" />

</RelativeLayout>